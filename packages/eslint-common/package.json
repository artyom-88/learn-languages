{
  "name": "@learn-languages/eslint-common",
  "version": "0.1.0",
  "description": "Common ESLint rules",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/artyom-88/learn-languages.git"
  },
  "publishConfig": {
    "directory": "dist",
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "build": "mkdir -p dist && cp package.json dist && cp index.js dist",
    "depcheck": "pnpm dlx depcheck",
    "lint": "eslint index.js --quiet --max-warnings 0",
    "lint:fix": "eslint index.js --fix",
    "lint:warn": "eslint index.js",
    "prepare": "pnpm run build",
    "test": "echo \"\"",
    "update": "pnpm dlx npm-check -u -E -s"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": ">= 5.0.0",
    "@typescript-eslint/parser": ">= 5.0.0",
    "eslint": ">= 8.0.0",
    "eslint-config-airbnb-base": ">= 15.0.0",
    "eslint-config-airbnb-typescript": ">= 17.0.0",
    "eslint-config-prettier": ">= 8.0.0",
    "eslint-plugin-import": ">= 2.0.0",
    "eslint-plugin-prettier": ">= 4",
    "prettier": ">=2.8",
    "typescript": ">=5"
  }
}
