{
  "name": "@learn-languages/server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "nest build -p tsconfig-build.json",
    "depcheck": "pnpm dlx depcheck",
    "lint": "eslint 'src/**/*.{tsx,ts}' --quiet --max-warnings 1",
    "lint:fix": "eslint 'src/**/*.{tsx,ts}' --fix ",
    "lint:warn": "eslint 'src/**/*.{tsx,ts}'",
    "prebuild": "rimraf dist",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:dev": "nest start --watch",
    "start:prod": "node ./dist/main.js",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "echo 'No e2e tests implemented yet.'",
    "test:watch": "jest --watch",
    "update": "pnpm dlx npm-check -u -E -s"
  },
  "dependencies": {
    "@apollo/server": "4.10.0",
    "@as-integrations/fastify": "2.1.1",
    "@fastify/static": "6.12.0",
    "@learn-languages/common": "workspace:^",
    "@nestjs/apollo": "12.0.11",
    "@nestjs/class-transformer": "0.4.0",
    "@nestjs/class-validator": "0.13.4",
    "@nestjs/common": "10.3.0",
    "@nestjs/config": "3.1.1",
    "@nestjs/core": "10.3.0",
    "@nestjs/graphql": "12.0.11",
    "@nestjs/mapped-types": "2.0.4",
    "@nestjs/mongoose": "10.0.2",
    "@nestjs/platform-fastify": "10.3.0",
    "@nestjs/serve-static": "4.0.0",
    "@nestjs/swagger": "7.2.0",
    "graphql-subscriptions": "2.0.0",
    "mongoose": "7.6.8",
    "openai": "4.25.0",
    "reflect-metadata": "0.2.1",
    "rxjs": "7.8.1"
  },
  "devDependencies": {
    "@learn-languages/eslint-common": "workspace:^",
    "@nestjs/cli": "10.3.0",
    "@nestjs/schematics": "10.1.0",
    "@nestjs/testing": "10.3.0",
    "@types/jest": "^29.5.11",
    "@types/supertest": "6.0.2",
    "jest": "^29.7.0",
    "prettier": "3.2.4",
    "supertest": "6.3.4",
    "ts-jest": "29.1.2",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
