{
  "name": "@learn-languages/server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "nest build -p tsconfig-build.json",
    "depcheck": "pnpm dlx depcheck",
    "lint": "eslint 'src/**/*.{tsx,ts}' --quiet --max-warnings 1",
    "lint:fix": "eslint 'src/**/*.{tsx,ts}' --fix ",
    "lint:warn": "eslint 'src/**/*.{tsx,ts}'",
    "prebuild": "rimraf dist",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "test": "echo \"TODO: jest\"",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "echo 'No e2e tests implemented yet.'",
    "test:watch": "jest --watch",
    "update": "pnpm dlx npm-check -u -E -s"
  },
  "dependencies": {
    "@fastify/static": "6.12.0",
    "@learn-languages/common": "workspace:^",
    "@nestjs/class-transformer": "0.4.0",
    "@nestjs/class-validator":  "0.13.4",
    "@nestjs/common": "10.2.8",
    "@nestjs/config": "3.1.1",
    "@nestjs/core": "10.2.8",
    "@nestjs/mapped-types": "2.0.2",
    "@nestjs/mongoose": "10.0.1",
    "@nestjs/platform-fastify": "^10.2.8",
    "@nestjs/swagger": "7.1.14",
    "mongoose": "7.6.4",
    "openai": "4.15.3",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.1"
  },
  "devDependencies": {
    "@learn-languages/eslint-common": "workspace:^",
    "@nestjs/cli": "10.2.1",
    "@nestjs/schematics": "10.0.3",
    "@nestjs/testing": "10.2.8",
    "@types/supertest": "2.0.15",
    "jest": "^29.7.0",
    "prettier": "3.0.3",
    "supertest": "6.3.3",
    "ts-jest": "29.1.1",
    "ts-loader": "9.4.4",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0"
  }
}
